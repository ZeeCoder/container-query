.Comment {
  border: 1px solid;
  margin: 5px;
  padding: 5px;
  background: grey;
  color: white;

  &__main {
    display: flex;
  }

  &__avatar {
    width: 100px;
    height: 100px;
    min-width: 100px;
    min-height: 100px;
    background: #eee;
    margin-right: 10px;
  }

  &__text {
    font-family: Arial, sans-serif;
  }

  &__container {
    padding-left: 50px;
  }

  @container (width > 500px) {
    background: white;
    color: black;
  }
}
